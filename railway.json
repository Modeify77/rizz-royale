{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci && npm run build -w @rizz/shared && npm run build -w @rizz/server"
  },
  "deploy": {
    "startCommand": "npm run start -w @rizz/server",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
